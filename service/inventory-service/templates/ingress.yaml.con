apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ .Release.Name }}-ingress
  namespace: wms
spec:
  ingressClassName: nginx
  rules:
  - host: api.sol-wms.store  # 수정: 특정 호스트 명시
    http:
      paths:
      - path: /api/inventory
        pathType: Prefix
        backend:
          service:
            name: {{ .Release.Name }}
            port:
              number: {{ .Values.service.port }}
