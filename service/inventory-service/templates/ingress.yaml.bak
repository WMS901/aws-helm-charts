apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ .Release.Name }}-ingress
  namespace: wms
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /api/inventory/$2
spec:
  ingressClassName: nginx
  rules:
  - http:
      paths:
      - path: /api/inventory(/|$)(.*)
        pathType: ImplementationSpecific
        backend:
          service:
            name: {{ .Release.Name }}
            port:
              number: {{ .Values.service.port }}

